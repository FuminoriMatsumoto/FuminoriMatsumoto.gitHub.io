:root {
  --glass-bg: rgba(255, 255, 255, 0.15);
  --glass-hover-bg: rgba(255, 255, 255, 0.25);
  --glass-blur: 12px;
  --glass-shadow: 0 0.5rem 1.5rem rgba(0,0,0,0.12);
}

@media (prefers-color-scheme: dark) {
  :root {
    --glass-bg: rgba(0, 0, 0, 0.35);
    --glass-hover-bg: rgba(0, 0, 0, 0.45);
    --glass-shadow: 0 0.5rem 1.5rem rgba(0,0,0,0.5);
  }
}

